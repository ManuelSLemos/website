---
import Layout from '../layouts/Layout.astro';
---

<Layout title="Manuel S. Lemos">
    <!-- App Preloader Start -->
    <div id="preloader">
        <div class="loader_line"></div>
        <div
            class="absolute w-20 h-20 transition-all delay-300 -translate-x-1/2 -translate-y-1/2 rounded-full logo top-1/2 left-1/2 bg-nightBlack border-greyBlack flex-center">
            <img src="/img/manuelslemos-logo.png" alt="Manuel S. Lemos">
        </div>
    </div>

    <!-- Background Web -->
    <div
        class="bg-lines fixed inset-0 -z-1 md:max-xl:max-w-[45rem] xl:max-w-60rem 2xl:max-w-container mx-auto max-sm:px-8 sm:max-xl:px-12">
        <div class="line-wrapper max-w-[1130px] w-full h-full ml-auto 2xl:-mr-24 relative flex justify-between">

            <div
                class="relative w-px h-full border-r border-dashed line line1 border-metalBlack before:absolute before:w-2 before:h-2 before:bg-theme before:rotate-45 before:-left-1 before:animate-top_bottom">
            </div>

            <div
                class="relative w-px h-full border-r border-dashed line line2 border-metalBlack before:absolute before:bottom-0 before:w-2 before:h-2 before:bg-theme before:rotate-45 before:-left-1 before:animate-bottom_top before:animate-delay-3s">
            </div>

            <div
                class="relative w-px h-full border-r border-dashed line line3 border-metalBlack before:absolute before:w-2 before:h-2 before:bg-theme before:rotate-45 before:-left-1 before:animate-top_bottom before:animate-delay-3s">
            </div>

            <div
                class="relative w-px h-full border-r border-dashed line line4 border-metalBlack before:absolute before:bottom-0 before:w-2 before:h-2 before:bg-theme before:rotate-45 before:-left-1 before:animate-bottom_top before:animate-delay-2s">
            </div>

        </div>
    </div>

    <!-- App Start -->
    <div class="relative pt-10 minfo__app max-xl:pt-20">
        <div
            class="menu-overlay fixed top-0 left-0 w-full h-full bg-black/60 transition-all duration-200 z-999 opacity-0 invisible [&.is-menu-open]:visible [&.is-menu-open]:opacity-100">
        </div>
        <div class="max-lg:px-4">

            <!-- Sidebar Profile Start -->
            <div
                class="w-full mx-auto minfo__sidebar__wrapper xl:fixed xl:top-1/2 xl:left-4 2xl:left-14 xl:-translate-y-1/2 md:max-w-sidebar xl:max-2xl:max-w-xs z-999">

                <div class="p-3 mb-3 overflow-hidden minfo__sidebar bg-nightBlack rounded-2xl">
                    <div class="mx-4 mt-12 text-center user-info lg:mx-6">
                        <a href="index.html"
                            class="w-32 mb-2.5 h-32 block mx-auto border-[6px] border-[#2f2f2f] overflow-hidden rounded-full">
                            <img src="/img/manuelslemos-avatar.jpg" class="w-full h-full rounded-full"
                                alt="Manuel S. Lemos">
                        </a>
                        <h6 class="mb-1 text-lg font-semibold text-white name">Manuel S. Lemos</h6>
                        <div class="leading-none cd-headline clip is-full-width">
                            <h6 class="text-sm cd-words-wrapper designation text-theme after:!bg-theme">
                                <b class="font-normal is-visible">FullStack Developer</b>
                                <b class="font-normal">Academic Director AI</b>
                                <b class="font-normal">OWASP LLM Contributor</b>
                            </h6>
                        </div>
                    </div>
                    <div class="pt-6 mx-4 border-t lg:mx-6 user-meta-info md:mx-7 my-7 border-metalBlack">
                    </div>

                    <svg class="absolute w-0 h-0">
                        <clipPath id="my-clip-path" clipPathUnits="objectBoundingBox" stroke="white" stroke-width="2">
                            <path
                                d="M0.001,0.031 C0.001,0.014,0.026,0.001,0.055,0.001 H0.492 C0.506,0.001,0.52,0.004,0.53,0.009 L0.61,0.052 C0.62,0.057,0.634,0.06,0.649,0.06 H0.947 C0.977,0.06,1,0.074,1,0.091 V0.971 C1,0.987,0.977,1,0.947,1 H0.055 C0.026,1,0.001,0.987,0.001,0.971 V0.031">
                            </path>
                        </clipPath>
                    </svg>
                </div>

            </div>

            <!-- Nav/Navigation Start -->
            <div
                class="minfo__nav__wrapper bg-power__black max-xl:hidden fixed top-1/2 -translate-y-1/2 right-4 2xl:right-14 z-999 flex items-center flex-col gap-4 border border-metalBlack rounded-4xl px-2.5 py-4">

                <!-- Site Logo Start -->
                <div class="flex border rounded-full logo w-15 h-15 border-metalBlack flex-center">
                    <a href="index.html">
                        <img src="/img/manuelslemos-logo.png" alt="ManuelSLemos">
                    </a>
                </div>

                <!-- Main Menu/Navigation Start -->
                <div class="my-4 menu">
                    <ul class="space-y-2 text-center">
                        <li data-scroll-nav="0" class="relative group active">
                            <a href="#"
                                class="w-9 h-9 rounded-full flex-center group-[&.active]:bg-metalBlack group-hover:bg-metalBlack transition-all duration-300 before:content-[attr(data-title)] before:absolute before:right-10 before:bg-metalBlack before:text-sm before:text-white before:px-4 before:py-2 before:rounded-md before:font-light before:opacity-0 before:transition-all before:duration-200 group-hover:before:opacity-100 after:content-[''] after:absolute after:w-0 after:h-0 after:right-8 after:border-solid after:border-t-4 after:border-r-0 after:border-b-4 after:border-l-8 after:border-t-transparent after:border-r-transparent after:border-b-transparent after:border-l-metalBlack after:opacity-0 after:transition-all after:duration-200 group-hover:after:opacity-100"
                                data-title="Home">
                                <span class="text-white group-hover:text-theme group-[&.active]:text-theme">
                                    <i class="fal fa-home"></i>
                                </span>
                            </a>
                        </li>
                        <li data-scroll-nav="1" class="relative group">
                            <a href="#"
                                class="w-9 h-9 rounded-full flex-center group-[&.active]:bg-metalBlack group-hover:bg-metalBlack transition-all duration-300 before:content-[attr(data-title)] before:absolute before:right-10 before:bg-metalBlack before:text-sm before:text-white before:px-4 before:py-2 before:rounded-md before:font-light before:opacity-0 before:transition-all before:duration-200 group-hover:before:opacity-100 after:content-[''] after:absolute after:w-0 after:h-0 after:right-8 after:border-solid after:border-t-4 after:border-r-0 after:border-b-4 after:border-l-8 after:border-t-transparent after:border-r-transparent after:border-b-transparent after:border-l-metalBlack after:opacity-0 after:transition-all after:duration-200 group-hover:after:opacity-100"
                                data-title="About">
                                <span class="text-white group-hover:text-theme group-[&.active]:text-theme">
                                    <i class="fal fa-user"></i>
                                </span>
                            </a>
                        </li>
                    </ul>
                </div>

                <!-- Share Button Wrapper Start -->
                <div class="relative share group">
                    <button
                        class="w-10 h-10 text-sm border rounded-full border-metalBlack flex-center group-hover:bg-metalBlack text-white/50"
                        aria-label="Share">
                        <i class="fal fa-share-alt"></i>
                    </button>

                    <!-- Social Share Icon Start  -->
                    <div
                        class="absolute bottom-0 flex items-center invisible px-5 py-6 space-x-3 transition-all duration-300 -translate-y-1/2 opacity-0 social-icons top-1/2 bg-nightBlack rounded-4xl right-6 group-hover:opacity-100 group-hover:visible group-hover:right-10 -z-1">
                        <a href="#" class="flex transition duration-200 hover:text-theme" title="Share with Facebook">
                            <i class="fab fa-facebook"></i>
                        </a>
                        <a href="#" class="flex transition duration-200 hover:text-theme" title="Share with Linkedin">
                            <i class="fab fa-linkedin-in"></i>
                        </a>
                        <a href="#" class="flex transition duration-200 hover:text-theme" title="Share with X">
                            <i class="fab fa-twitter"></i>
                        </a>
                        <a href="#" class="flex transition duration-200 hover:text-theme" title="Share with X">
                            <i class="fab fa-instagram"></i>
                        </a>
                    </div>
                    <!-- Social Share Icon End  -->
                </div>

            </div>

            <div class="relative mx-auto minfo__contentBox max-w-container xl:max-2xl:max-w-65rem">

                <!-- Hero/Introduction Section Start -->
                <div data-scroll-index="0" id="home"
                    class="py-5 xl:py-3.5 max-w-content xl:max-2xl:max-w-50rem max-xl:mx-auto xl:ml-auto">

                    <div class="px-5 py-8 bg-nightBlack rounded-2xl hero-section md:p-8 lg:p-10 2xl:p-13">
                        <div
                            class="inline-flex items-center gap-2 px-4 py-2 text-xs tracking-wide text-white border lg:px-5 section-name border-greyBlack200 rounded-4xl">
                            <i class="fal fa-home text-theme"></i>
                            INICIO
                        </div>
                        <div class="items-center gap-6 hero-content md:flex xl:gap-10">
                            <div class="text-content pt-7 lg:pt-8 max-lg:max-w-[30rem]">
                                <h1
                                    class="text-[31px] lg:text-5xl xl:text-4xl 2xl:text-5xl font-semibold text-white leading-1.27 lg:leading-1.27 xl:leading-1.27 2xl:leading-1.27 mb-4 lg:mb-5">
                                    Hola 🤟, soy <br>
                                    <span class="text-theme">Manuel S. Lemos</span>
                                </h1>
                                <p>
                                    I am a <span class="font-medium text-white/90">Frontend Developer</span> at heart
                                    and,
                                    i create
                                    features that are
                                    best suited for
                                    the job at hand.
                                </p>
                                <ul class="flex items-center mt-4 -mx-3 lg:mt-5">
                                    <li class="flex items-center mx-3 text-regular">
                                        <i class="mr-2 fal fa-check-double text-theme"></i>
                                        Profesional
                                    </li>
                                    <li class="flex items-center mx-3 text-regular">
                                        <i class="mr-2 fal fa-check-double text-theme"></i>
                                        Ponente
                                    </li>
                                    <li class="flex items-center mx-3 text-regular">
                                        <i class="mr-2 fal fa-check-double text-theme"></i>
                                        Profesor
                                    </li>
                                </ul>

                            </div>
                            <div class="hero-image flex-[0_0_20.3rem] max-md:hidden">
                                <img src="/img/manuelslemos-hero.png" alt="Manuel S. Lemos">
                            </div>
                        </div>
                    </div>

                </div>

                <!-- About Me Section Start -->
                <div data-scroll-index="1" id="about"
                    class="py-3.5  max-w-content xl:max-2xl:max-w-50rem max-xl:mx-auto xl:ml-auto">

                    <div class="px-5 py-8 md:p-8 bg-nightBlack rounded-2xl about-section lg:p-10 2xl:p-13">
                        <div
                            class="inline-flex items-center gap-2 px-4 py-2 text-xs tracking-wide text-white border lg:px-5 section-name border-greyBlack200 rounded-4xl">
                            <i class="fal fa-user text-theme"></i>
                            SOBRE MI
                        </div>
                        <div class="mt-7 md:mt-10 section-title">
                            <h2
                                class="title text-[32px] md:text-4xl lg:text-5xl font-extralight text-white leading-1.27">
                                Sobre <span class="font-semibold text-theme">Mi</span>
                            </h2>
                            <p class="max-w-2xl mt-4 md:mt-6 subtitle">
                                Soy Manuel S. Lemos, un profesional con una amplia experiencia en el mundo de la tecnología. Me he especializado en el desarrollo de software y cuento con una formación sólida en el área de Inteligencia Artificial y Big Data, habiendo obtenido un Máster en la UAX.
                            </p>
                        </div>
                        <div class="mt-6 section-content">

                            <ul class="grid grid-cols-2 gap-6 counters md:grid-cols-4 xl:gap-8">
                                <li class="">
                                    <div class="mb-1 text-2xl font-semibold md:text-3xl number text-theme 2xl:text-4xl text-center">
                                        <span>10</span>+
                                    </div>
                                    <div class="text-sm text-center">Años de Experiencia</div>
                                </li>
                                <li class="">
                                    <div class="mb-1 text-2xl font-semibold md:text-3xl number text-theme 2xl:text-4xl text-center">
                                        <span>152</span>+
                                    </div>
                                    <div class="text-sm text-center">Proyectos desarrollados</div>
                                </li>
                                <li class="">
                                    <div class="mb-1 text-2xl font-semibold md:text-3xl number text-theme 2xl:text-4xl text-center">
                                        <span>03</span>
                                    </div>
                                    <div class="text-sm text-center">Proyectos Open Source</div>
                                </li>
                                <li class="">
                                    <div class="mb-1 text-2xl font-semibold md:text-3xl number text-theme 2xl:text-4xl text-center">
                                        <span>13</span>
                                    </div>
                                    <div class="text-sm text-center">Ponencias</div>
                                </li>
                            </ul>

                        </div>
                    </div>

                </div>

                <!-- Footer Start -->
                <footer class="py-6 text-center lg:ml-auto footer-section max-w-content xl:max-2xl:max-w-50rem">
                    <p class="">
                        © 2024 Manuel S. Lemos
                    </p>
                </footer>
            </div>
            
        </div>
    </div>

    <!-- Js Library Start -->
    <script is:inline src="/js/jquery-3.6.0.min.js"></script>
    <script is:inline src="/js/waypoints.min.js"></script>
    <script is:inline src="/js/tw-elements.umd.min.js"></script>
    <script is:inline src="/js/cd-headline.js"></script>
    <script is:inline src="/js/jquery.counterup.min.js"></script>
    <script is:inline src="/js/swiper-bundle.min.js"></script>
    <script is:inline src="/js/scrollIt.min.js"></script>
    <script is:inline src="/js/circle-progress.min.js"></script>
    <script is:inline src="/js/script.js"></script>
</Layout>